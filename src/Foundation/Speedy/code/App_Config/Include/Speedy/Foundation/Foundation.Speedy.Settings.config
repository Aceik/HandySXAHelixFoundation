<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/"
               xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore>
    <settings>
      <setting name="Speedy.IsPublicFacingEnvironment" value="false" role:require="Standalone" />
      <setting name="Speedy.IsPublicFacingEnvironment" value="true" role:require="!Standalone" />
      <!--Update this to true if you are running local node critical css generator-->
      <setting name="Speedy.UseLocalCriticalCssGenerator" value="false" role:require="Standalone" />
      <setting name="Speedy.UseLocalCriticalCssGenerator" value="false" role:require="!Standalone" />
    </settings>
  </sitecore>
</configuration>